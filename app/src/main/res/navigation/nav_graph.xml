<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.materialcomponents.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_buttonFragment"
            app:destination="@id/buttonFragment" />
        <action
            android:id="@+id/action_mainFragment_to_badageDrawableFragment"
            app:destination="@id/badageDrawableFragment" />
        <action
            android:id="@+id/action_mainFragment_to_tabLayoutFragment"
            app:destination="@id/tabLayoutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_bottomNavigationFragment"
            app:destination="@id/bottomNavigationFragment" />

    </fragment>

    <fragment
        android:id="@+id/buttonFragment"
        android:name="com.example.materialcomponents.ButtonFragment"
        android:label="fragment_button"
        tools:layout="@layout/fragment_button" />

    <fragment
        android:id="@+id/badageDrawableFragment"
        android:name="com.example.materialcomponents.BadageDrawableFragment"
        android:label="fragment_badage_drawable"
        tools:layout="@layout/fragment_badage_drawable" />
    <fragment
        android:id="@+id/tabLayoutFragment"
        android:name="com.example.materialcomponents.TabLayoutFragment"
        android:label="fragment_tab_layout"
        tools:layout="@layout/fragment_tab_layout" />
    <fragment
        android:id="@+id/bottomNavigationFragment"
        android:name="com.example.materialcomponents.BottomNavigationFragment"
        android:label="fragment_bottom_navigation"
        tools:layout="@layout/fragment_bottom_navigation" />


</navigation>